<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Jellyfin.Plugin.Jellio</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <CodeAnalysisRuleSet>../jellyfin.ruleset</CodeAnalysisRuleSet>
    <Version>0.3.25</Version>
    <AssemblyVersion>0.3.25.0</AssemblyVersion>
    <FileVersion>0.3.25.0</FileVersion>
    <Description>Jellio plugin providing enhanced auth-aware endpoints.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="[10.11.0,10.12.0)" />
    <PackageReference Include="Jellyfin.Model" Version="[10.11.0,10.12.0)" />
  </ItemGroup>

    <ItemGroup>
        <PackageReference Include="SerilogAnalyzer" Version="0.15.0" PrivateAssets="All" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556" PrivateAssets="All" />
        <PackageReference Include="SmartAnalyzers.MultithreadingAnalyzer" Version="1.1.31" PrivateAssets="All" />
    </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Web\config.html" />
    <EmbeddedResource Include="Web\redirect.html" />
    <EmbeddedResource Include="Web\index.html" />
  </ItemGroup>

</Project>
